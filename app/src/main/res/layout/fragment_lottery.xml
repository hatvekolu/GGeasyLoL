<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antika.berk.ggeasy.fragment.LotteryFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        android:layout_below="@+id/imageView5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="@string/join_lottery"
            android:textAllCaps="false"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textStyle="normal|bold"
            android:visibility="gone" />

        <TextView
            android:text="Çekiliş Yapılıyor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView40"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed" />

        <TextView
            android:text="Katıldınız"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView43"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/transparent"
        android:layout_above="@+id/list_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Lottarry Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed" />

        <TextView
            android:text="123 - 21:12:10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:textColor="@color/cast_expanded_controller_text_color" />

        <TextView
            android:text="1000RP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView42"
            android:layout_margin="5dp"
            android:textColor="@color/cast_expanded_controller_text_color" />
    </RelativeLayout>


</RelativeLayout>
